extends ./_layout-root.pug
block header
  header.header
    .container
      .header-left
        a(href='https://superdevresources.com/').site-branding
          img(src="/img/sdr-logo.png")
          h1.title.screen-reader-text SDR News
      .menu-toggle
        input(type="checkbox")#menu-toggle
        label(for="menu-toggle").header-right
          span.css-icon-hamburger
            span Toggle
          span Menu
        .menu-toggle-content
          +menu(data.menu.main, 'menu main-menu')
          .header-right
            +menu(data.menu.secondary, 'menu')
            .expandable-search
              include ./../_includes/search-form.html
            
block content
  != page.content

block footer   
  footer.footer
    .footer-main.container-content 
      div.grid        
        div.one-fourth
          a(href='https://superdevresources.com/')
            img.footer-logo(src="/img/sdr-logo.png")
          div <a href="https://superdevresources.com/">Super Dev Resources</a> is your destination for finding
            | awesome free web design and development resources.
            |  <a class="text-small" href="https://superdevresources.com/about/">Learn More</a>
        
        div.one-fourth
          +menu(data.menu.main)
        div.one-fourth
          +menu(data.menu.footer)
        div.one-fourth
          +menu(data.menu.social)
    div.footer-credit.section.text-center
      div.container-content
